{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": true,
  "mcp": {
    "tanstack_mcp": {
      "type": "remote",
      "url": "https://tanstack.com/api/mcp",
      "headers": {
        "Authorization": "Bearer {env:TANSTACK_MCP_API_KEY}"
      },
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "convex_mcp": {
      "type": "local",
      "command": ["npx", "-y", "convex@latest", "mcp", "start"],
      "environment": {
        "CONVEX_DEPLOYMENT": "dev:quirky-porcupine-806"
      },
      "enabled": true
    }
  }
}
